       RowBox[{"i", ",", "j", ",", "k"}], ")"}]}], "=", 
     RowBox[{
      StyleBox["P",
       FontSlant->"Plain"], "[", 
      RowBox[{
       RowBox[{"i", " ", "liberals"}], ",", " ", 
       RowBox[{"j", " ", "centrists"}], ",", " ", 
       RowBox[{"k", " ", "conservatives"}]}], "]"}]},
    {" ", "=", 
     RowBox[{
      FractionBox[
       RowBox[{
        RowBox[{"(", "\[NegativeThinSpace]", GridBox[{
           {
            RowBox[{" ", "45", " "}]},
           {"i"}
          }], "\[NegativeThinSpace]", ")"}], 
        RowBox[{"(", "\[NegativeThinSpace]", GridBox[{
           {
            RowBox[{" ", "30", " "}]},
           {"j"}
          }], "\[NegativeThinSpace]", ")"}], 
        RowBox[{"(", "\[NegativeThinSpace]", GridBox[{
           {
            RowBox[{" ", "25", " "}]},
           {"k"}
          }], "\[NegativeThinSpace]", ")"}]}], 
       RowBox[{"(", "\[NegativeThinSpace]", GridBox[{
          {
           RowBox[{" ", "100", " "}]},
          {"8"}
         }], "\[NegativeThinSpace]", ")"}]], " ", ",", " ", "i", ",", "j", 
      ",", 
      RowBox[{"k", " ", "\[Element]", 
       RowBox[{"{", 
        RowBox[{"0", ",", " ", "1", ",", " ", "...", " ", ",", " ", "8"}], 
        "}"}]}], ",", " ", 
      RowBox[{
       RowBox[{"i", "+", "j", "+", "k"}], "=", "8"}]}]}

        RowBox[{"(", 
         FormBox[
          FractionBox["y", "\[Theta]"],
          TraditionalForm], ")"}], "n"],
       TraditionalForm], " ", 
      FormBox["-",
       TraditionalForm], " ", 
      FormBox[
       SuperscriptBox[
        RowBox[{"(", 
         FormBox[
          FractionBox[
           RowBox[{"y", "-", "1"}], "\[Theta]"],
          TraditionalForm], ")"}], "n"],
       TraditionalForm]}]}]}], ",", "    ", 
   RowBox[{
    StyleBox["y",
     FontSlant->"Italic"], " ", "\[Element]", " ", 
    FormBox[
     RowBox[{"{", 
      RowBox[{"1", ",", "2", ",", "...", " ", ",", "\[Theta]"}], "}"}],
     TraditionalForm]}]}]}]], "DisplayFormula",

    RowBox[{"(", 
     RowBox[{"y", "/", "\[Theta]"}], ")"}], "n"], "-", 
   SuperscriptBox[
    RowBox[{"(", 
     RowBox[{
      RowBox[{"(", 
       RowBox[{"y", "-", "1"}], ")"}], "/", "\[Theta]"}], ")"}], 
    "n"]}]}]], "Input",

}], "Text"],

Cell[BoxData[
 RowBox[{
  RowBox[{"OptValue", "[", 
   RowBox[{
   "t_", ",", "x_", ",", "T_", ",", "EP_", ",", "b_", ",", "a_", ",", "r_"}], 
   "]"}], ":=", "\[IndentingNewLine]", 
  RowBox[{"Module", "[", 
   RowBox[{
    RowBox[{"{", " ", 
     RowBox[{"p", ",", "V"}], " ", "}"}], ",", "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{"p", "=", 
      FractionBox[
       RowBox[{"r", "-", "a"}], 
       RowBox[{"b", "-", "a"}]]}], ";", "\[IndentingNewLine]", 
     RowBox[{"V", "=", 
      RowBox[{
       FractionBox["1", 
        SuperscriptBox[
         RowBox[{"(", 
          RowBox[{"1", "+", "r"}], ")"}], 
         RowBox[{"T", "-", "t"}]]], "*", 
       RowBox[{"NSum", "[", 
        RowBox[{
         RowBox[{
          RowBox[{"Binomial", "[", 
           RowBox[{
            RowBox[{"T", "-", "t"}], ",", "j"}], "]"}], "*", 
          SuperscriptBox["p", "j"], "*", 
          SuperscriptBox[
           RowBox[{"(", 
            RowBox[{"1", "-", "p"}], ")"}], 
           RowBox[{"T", "-", "t", "-", "j"}]], "*", 
          RowBox[{"Max", "[", 
           RowBox[{"0", ",", 
            RowBox[{
             RowBox[{"x", "*", 
              SuperscriptBox[
               RowBox[{"(", 
                RowBox[{"1", "+", "b"}], ")"}], "j"], "*", 
              SuperscriptBox[
               RowBox[{"(", 
                RowBox[{"1", "+", "a"}], ")"}], 
               RowBox[{"T", "-", "t", "-", "j"}]]}], "-", "EP"}]}], "]"}]}], 
         ",", 
         RowBox[{"{", 
          RowBox[{"j", ",", "0", ",", 
           RowBox[{"T", "-", "t"}]}], "}"}]}], "]"}]}]}], ";", 
     "\[IndentingNewLine]", "V"}]}], "]"}]}]], "Input",

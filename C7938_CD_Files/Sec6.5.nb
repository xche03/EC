Cell[TextData[{
 "\tWe can use the OptValue function in a simple way to simulate a stock \
price and its option price together. The  function SimStockAndOption \
simulates a series of \"ups\" and \"downs\" of the stock price, and updates \
and returns lists of stock prices and corresponding option prices at each \
time up to ",
 StyleBox["T",
  FontSlant->"Italic"],
 ". "
}], "Text",
 CellChangeTimes->{{3.4043212368125*^9, 3.4043212375*^9}, {
  3.404321283796875*^9, 3.4043213060625*^9}}],

Cell[BoxData[
 RowBox[{
  RowBox[{"SimStockAndOption", "[", 
   RowBox[{
   "initprice_", ",", "T_", ",", "EP_", ",", "b_", ",", "a_", ",", "r_"}], 
   "]"}], ":=", "\[IndentingNewLine]", 
  RowBox[{"Module", "[", 
   RowBox[{
    RowBox[{"{", 
     RowBox[{
     "p", ",", "stockprice", ",", "stocklist", ",", "optionprice", ",", 
      "optionlist"}], "}"}], ",", "\[IndentingNewLine]", "\t", 
    RowBox[{
     RowBox[{"p", "=", 
      FractionBox[
       RowBox[{"r", "-", "a"}], 
       RowBox[{"b", "-", "a"}]]}], ";", "\[IndentingNewLine]", "     ", 
     RowBox[{"stocklist", "=", 
      RowBox[{"{", 
       RowBox[{"{", 
        RowBox[{"0", ",", "initprice"}], "}"}], "}"}]}], ";", "\t", 
     RowBox[{"optionlist", "=", 
      RowBox[{"{", 
       RowBox[{"{", 
        RowBox[{"0", ",", 
         RowBox[{"OptValue", "[", 
          RowBox[{
          "0", ",", "initprice", ",", "T", ",", "EP", ",", "b", ",", "a", ",",
            "r"}], "]"}]}], "}"}], "}"}]}], ";", "\[IndentingNewLine]", 
     RowBox[{"stockprice", "=", "initprice"}], ";", "\[IndentingNewLine]", 
     RowBox[{"Do", "[", 
      RowBox[{
       RowBox[{
        RowBox[{"If", "[", 
         RowBox[{
          RowBox[{
           RowBox[{"RandomReal", "[", "]"}], "\[LessEqual]", "p"}], ",", 
          RowBox[{"stockprice", "=", 
           RowBox[{
            RowBox[{"(", 
             RowBox[{"1", "+", "b"}], ")"}], "stockprice"}]}], ",", 
          RowBox[{"stockprice", "=", 
           RowBox[{
            RowBox[{"(", 
             RowBox[{"1", "+", "a"}], ")"}], "stockprice"}]}]}], "]"}], ";", 
        "\[IndentingNewLine]", 
        RowBox[{"AppendTo", "[", 
         RowBox[{"stocklist", ",", 
          RowBox[{"{", 
           RowBox[{"t", ",", "stockprice"}], "}"}]}], "]"}], ";", 
        "\[IndentingNewLine]", 
        RowBox[{"optionprice", "=", 

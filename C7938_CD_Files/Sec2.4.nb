 FormBox[
  RowBox[{
   StyleBox["p",
    FontSlant->"Italic"], " ", "=", " ", 
   RowBox[{
    RowBox[{
     StyleBox["P",
      FontSlant->"Plain"], "[", 
     RowBox[{"event", " ", "happens", " ", "in", " ", "interval", " ", 
      RowBox[{"(", 
       RowBox[{
